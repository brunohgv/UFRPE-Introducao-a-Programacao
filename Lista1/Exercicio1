#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

/* Faça um Programa que peça dois números ao usuário e imprima o maior deles. */

int main() 
{
	setlocale(LC_ALL, "portuguese");
	
	int num1, num2;
	
	printf("Digite dois números e te direi qual é o maior. \nPrimeiro:");
	scanf("%i", &num1);
	printf("Segundo:");
	scanf("%i", &num2);
	
	if(num1 > num2)
	{
		printf("\nO maior é %i", num1);
	}
	else
	{
		printf("\nO maior é %i", num2);
	}
	
	
    system("pause");
	return 0;
	
}
