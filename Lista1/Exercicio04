#include <stdio.h>
#include <stdlib.h>
#include <locale.h>


int main() {
	setlocale(LC_ALL, "portuguese");
	
	int num;
	
	printf("Digite um número\n");
	scanf("%i", &num);
	if(num%2 == 0)
	{
		printf("\nO número é par\n");
	}
	else
	{
		printf("\nO número é ímpar\n");
	}

	
	system("pause");
	
	return 0;
}
